<%- include("../partials/header") %>


<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to YelpCamp!</h1>
			<p>View our hand-picked campgrounds from all over the world</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
			</p>
		</div>
	</header>


	<div class="row text-center" style="display:flex; flex-wrap: wrap;" >
		<% campgrounds.forEach(function(campground){ %>
			<div>
				<div class="col-md-3 col-sm-6">
						<figure class="figure">
							<img src="<%= campground.image %>" class="rounded mx-auto d-block" width="300" alt="Image">
							<figcaption class="figure-caption" style="font-size: larger;"><%= campground.name %></figcaption>
							<p>
								<a href="/campgrounds/<%=campground._id%>" class="btn btn-info style:font-size:5px;">More Info</a>
							</p>
						</figure>

				</div>
			</div>
		<% }); %>
	</div>
</div>

<%- include("../partials/footer") %>
